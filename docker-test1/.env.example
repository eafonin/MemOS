# ============================================
# MemOS Test Instance 1 - Environment Configuration
# Created: 2025-10-17
# Purpose: Fresh instance for testing data loading with tree-text memory
# ============================================

# ============================================
# OpenAI API Configuration (OpenRouter)
# ============================================
OPENAI_API_KEY=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
OPENAI_API_BASE=https://openrouter.ai/api/v1

# Chat Model Configuration
MOS_CHAT_MODEL=anthropic/claude-3.5-sonnet
MOS_CHAT_MODEL_PROVIDER=openai
MOS_CHAT_TEMPERATURE=0.7
MOS_MAX_TOKENS=2048
MOS_TOP_P=0.9
MOS_TOP_K_GENERATION=50

# ============================================
# Embedder Configuration (Local CPU via TEI)
# ============================================
MOS_EMBEDDER_BACKEND=universal_api
MOS_EMBEDDER_PROVIDER=openai
MOS_EMBEDDER_API_BASE=http://tei:80
MOS_EMBEDDER_API_KEY=unused
MOS_EMBEDDER_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# ============================================
# Reranker Configuration
# ============================================
MOS_RERANKER_BACKEND=cosine_local

# ============================================
# Database Configuration
# ============================================

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Neo4j Graph Database
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=memospassword123
NEO4J_BACKEND=neo4j-community
NEO4J_DB_NAME=neo4j

# Use separate database per user (recommended for testing)
MOS_NEO4J_SHARED_DB=true

# ============================================
# MemOS User Configuration
# ============================================
MOS_USER_ID=test1_user
MOS_SESSION_ID=test1_session

# ============================================
# Memory Configuration
# ============================================

# Memory Types
MOS_ENABLE_TEXTUAL_MEMORY=true
MOS_ENABLE_ACTIVATION_MEMORY=false
MOS_ENABLE_PARAMETRIC_MEMORY=false

# Text Memory Type: tree_text for hierarchical graph-based memory
MOS_TEXT_MEM_TYPE=tree_text

# Retrieval Configuration
MOS_TOP_K=50
MOS_MAX_TURNS_WINDOW=10

# Tree-Text Memory Features
MOS_ENABLE_REORGANIZE=false
ENABLE_INTERNET=false

# ============================================
# Feature Toggles
# ============================================
MOS_ENABLE_DEFAULT_CUBE_CONFIG=false
MOS_ENABLE_SCHEDULER=false

# ============================================
# Path Configuration
# ============================================
MOS_CUBE_PATH=/app/data/mem_cubes

# ============================================
# Development/Debugging
# ============================================
MOS_ENV=development
MOS_LOG_LEVEL=INFO
DEBUG_MODE=false
PYTHONUNBUFFERED=1
PYTHONPATH=/app/src

# ============================================
# Build Constraints (for reproducibility)
# ============================================
PIP_CONSTRAINT=/opt/constraints.txt
